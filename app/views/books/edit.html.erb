<body>
<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

    <div>Title</div>
    <%= f.text_field :title %>

    <div>Body</div>
    <%= f.text_area :body %>

    <%= f.submit 'Update Book' %>

 <% end %>


    <!--showのリンク作る-->
    <%= link_to "Show", book_path(@book.id) %>
    |
    <%= link_to "Back", "/books" %>

</body>