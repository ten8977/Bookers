<h1>Books</h1>
<p>Find me in app/views/books/index.html.erb</p>


<h2>New book</h2>
  <%= form_with model: @book, url: '/books', method: :post do |f| %> <!--index?new? -->
    <div>Title</div>
    <%= f.text_field :title %>

    <div>Body</div>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

  <% end %>