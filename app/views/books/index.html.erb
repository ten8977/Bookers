<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

<% @books.each do |book| %>

     <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", "/books/show" %></td>
      <td><%= link_to "Edit", "/books/edit" %></td>
      <td><%= link_to "Destroy", "/books/destroy" %></td>
    </tr>



<% end %>
  </tbody>
</table>

<!--ここから下は投稿機能-->

<h2>New book</h2>
  <%= form_with model: @book, url: '/books', method: :post do |f| %> <!--index?new? -->
    <div>Title</div>
    <%= f.text_field :title %>

    <div>Body</div>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

  <% end %>